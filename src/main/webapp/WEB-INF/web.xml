<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="2.5">

    <servlet>
        <servlet-name>Spectrogram</servlet-name>
        <servlet-class>s2m.fourier.SpectrogramServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FFT</servlet-name>
        <servlet-class>s2m.fourier.FFTServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FFT</servlet-name>
        <url-pattern>/fft</url-pattern>
    </servlet-mapping>


    <servlet-mapping>
        <servlet-name>Spectrogram</servlet-name>
        <url-pattern>/spectrogram</url-pattern>
    </servlet-mapping>
</web-app>